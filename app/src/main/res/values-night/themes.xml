<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Dark Theme -->
    <style name="Base.Theme.AndroidFundamental1" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/dark_variant</item>
        <item name="colorPrimaryVariant">@color/dark_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/dark_accent</item>
        <item name="colorSecondaryVariant">@color/dark_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/gray_light</item>

        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/white</item>

        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:navigationBarColor">@color/dark_background</item>
        <item name="android:windowBackground">@color/dark_background</item>
